<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag 'no_image.jpg' %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
  <p>User name：<%= book.user.name %></p>
</div>

<% end %>

    <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>