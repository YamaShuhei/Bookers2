<div>
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table>
    <tr>
      <th>Name</th>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= current_user.introduction %></td>
    </tr>
  </table>

  <p><%= link_to "User Edit", edit_user_path(current_user.id) %></p>
</div>

    <h2>New book</h2>
  <%= form_with model: @book, url: books_path, scope: :book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
