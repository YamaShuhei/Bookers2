<div>
  <p>Title：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p>User image：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>User name：<%= link_to @book.user.name, user_path(@book.user_id) %></p>
  <p>Uploaded：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
    <% if @book.user == current_user %>
    <%= link_to "Edit Book", edit_book_path %>
    <%= link_to "delete", book_path(@book), method: :delete %>
    <% end %>
</div>