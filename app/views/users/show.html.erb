<%= render 'books/sidebar', books: @books %>

<% @books.each do |book| %>
<div>
  <%= link_to @user do %>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <% end %>
  <%= link_to book_path(book.id) do %>
    <p>Book Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.body %></p>
  <p>User name：<%= book.user.name %></p>
</div>
<% end %>