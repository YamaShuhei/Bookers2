<h2>User info</h2>
<div class = "error message">
<% if @user.errors.any? %>
  Error occurred in<%= @user.errors.count %>case.
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<%= form_with model: @user do |f| %>
<label for="inputName">Name</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
<label for="inputImage">ProfileImage</label>
<%= f.file_field :profile_image, placeholder: "Profile Image", accept: "image/*" %>
<label for="inputIntroduction">Introduction</label>
<%= f.text_area :introduction, id:"inputIntroduction", placeholder:"Introduction" %>

<%= f.submit "Update User" %>

<% end %>